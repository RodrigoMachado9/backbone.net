set system host-name 'edge-b'

set interfaces ethernet eth0 address '10.255.3.2/30'
set interfaces ethernet eth1 address '10.255.4.2/30'
set interfaces ethernet eth2 address '10.10.2.1/24'

set protocols ospf parameters router-id '10.255.3.2'
set protocols ospf area 0 network '10.255.3.0/30'
set protocols ospf area 0 network '10.255.4.0/30'
