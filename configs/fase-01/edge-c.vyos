# backbone.net — Fase 01: Fundação
# Roteador: edge-c
# Função: Edge router (filial C)
# Interfaces: eth0=dc1, eth1=dc2, eth2=LAN cliente-c

set system host-name 'edge-c'

# --- Interfaces ---
set interfaces ethernet eth0 address '10.255.5.2/30'
set interfaces ethernet eth0 description 'UPLINK: edge-c <-> core-dc1'

set interfaces ethernet eth1 address '10.255.6.2/30'
set interfaces ethernet eth1 description 'UPLINK: edge-c <-> core-dc2'

set interfaces ethernet eth2 address '10.10.3.1/24'
set interfaces ethernet eth2 description 'LAN: Cliente C'

# --- OSPF (IGP) ---
set protocols ospf parameters router-id '10.255.5.2'
set protocols ospf area 0 network '10.255.5.0/30'
set protocols ospf area 0 network '10.255.6.0/30'
set protocols ospf area 0 network '10.10.3.0/24'
