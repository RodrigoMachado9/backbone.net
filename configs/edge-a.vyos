set system host-name 'edge-a'

set interfaces ethernet eth0 address '10.255.1.2/30'
set interfaces ethernet eth1 address '10.255.2.2/30'
set interfaces ethernet eth2 address '10.10.1.1/24'

set protocols ospf parameters router-id '10.255.1.2'
set protocols ospf area 0 network '10.255.1.0/30'
set protocols ospf area 0 network '10.255.2.0/30'
set protocols ospf area 0 network '10.10.1.0/24'

# VRF example (VRF-lite)
set vrf name 'CLIENTE-A' table '100'
set interfaces ethernet eth2 vrf 'CLIENTE-A'
